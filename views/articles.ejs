<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HNN - Harry News Network</title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>

  <!-- Header with Navigation -->
  <header class="bg-primary text-white p-3">
    <div class="container">
      <nav class="nav justify-content-center">
        <a class="nav-link text-white" href="/">Home</a>
        <a class="nav-link text-white" href="/about">About</a>
        <a class="nav-link text-white" href="/articles">Articles</a>
        <a class="nav-link text-white" href="/categories">Categories</a>
        <a class="nav-link text-white" href="/articles/add">Add Article</a>
      </nav>
    </div>
  </header>

  <!-- Content Area -->
  <main class="container my-4">
    <div class="content p-4 bg-light">
      <h2><a href="/articles/">Articles</a></h2>
  
      <!-- Bootstrap Table -->
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Published</th>
            <th scope="col">Category</th>
            <th scope="col">Article Date</th>
          </tr>
        </thead>
        <tbody>
          <% articles.forEach((article) => { %>
            <tr>
              <td><a href="/article/<%= article.Id %>"><%= article.title %></a></td>
              <td><%= article.author %></td>
              <td><%= article.published ? "Yes" : "No" %></td>
              <td><a href="/articles?category=<%= article.category %>"><%= article.categoryName %></a></td>
              <td><%= article.articleDate %></td>
            </tr>
          <% }); %>
        </tbody>
    </table>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    <div class="container">
      <p>Â© 2024 Harry Scanlan, 1234567, <a href="mailto:harry.scanlan@senecapolytechnic.ca">harry.scanlan@senecapolytechnic.ca</a>. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
